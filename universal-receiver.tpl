function shouldClaimRequest() {
  // if (authHeader && )
  return getRequestPath() === REQUEST_PATH && getRequestMethod() === REQUEST_TYPE;  
}

// returns the parameters sent with the requests as a json object.
// if it's GET, the payload is obtained from the URL, after parsing the query string.
// if it's POST, the payload is obtained from the body as json.
function extractPayload(){
  if (getRequestMethod() === 'POST') {
    const requestBody = getRequestBody();
    if (requestBody === '') return {};
    else {
      const requestBodyParsed = JSON.parse(requestBody);
      if (requestBodyParsed !== undefined && getType(requestBodyParsed) !== 'array') {
        return requestBodyParsed;
      } else {
        log('[Universal Receiver] request body is invalid. Make sure you send a valid non-array JSON object');
        return {};
      }
    }
  } else if (getRequestMethod() === 'GET') {
    const queryParameters = getRequestQueryParameters();
    return queryParameters;
  }

}


